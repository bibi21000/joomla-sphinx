<?xml version="1.0" encoding="utf-8"?>
<config>
	<fieldset name="component"
		label="COM_SPHINXDOC_COMPONENT_LABEL"
		description="COM_SPHINXDOC_COMPONENT_DESC"
	>
        <field
            name="home"
            type="folderlist"
            label="COM_SPHINXDOC_FIELD_HOME_LABEL"
            description="COM_SPHINXDOC_FIELD_HOME_DESC"
            required="true"
            hide_none="true"
            default="_sphinxdocs"
        />
        <field
            name="show_title"
            type="radio"
            label="COM_SPHINXDOC_FIELD_SHOW_TITLE_LABEL"
            description="COM_SPHINXDOC_FIELD_SHOW_TITLE_DESC"
            default="1">
            <option
                value="0">JHIDE</option>
            <option
                value="1">JSHOW</option>
        </field>
        <field
            name="show_category"
            type="radio"
            label="COM_SPHINXDOC_FIELD_SHOW_CATEGORY_LABEL"
            description="COM_SPHINXDOC_FIELD_SHOW_CATEGORY_DESC"
            default="0"
        >
            <option value="0">JHIDE</option>
            <option value="1">JSHOW</option>
        </field>
        <field
            name="show_index"
            type="radio"
            label="COM_SPHINXDOC_FIELD_SHOW_INDEX_LABEL"
            description="COM_SPHINXDOC_FIELD_SHOW_INDEX_DESC"
            default="2"
        >
            <option value="0">JNONE</option>
            <option value="1">COM_SPHINXDOC_LEFT</option>
            <option value="2">COM_SPHINXDOC_RIGHT</option>
        </field>
        <field
            name="show_toc"
            type="radio"
            label="COM_SPHINXDOC_FIELD_SHOW_TOC_LABEL"
            description="COM_SPHINXDOC_FIELD_SHOW_TOC_DESC"
            default="0"
        >
            <option value="0">JNONE</option>
            <option value="1">COM_SPHINXDOC_LEFT</option>
            <option value="2">COM_SPHINXDOC_RIGHT</option>
        </field>
        <field
            name="show_author"
            type="radio"
            label="JGLOBAL_SHOW_AUTHOR_LABEL"
            description="JGLOBAL_SHOW_AUTHOR_DESC"
            default="0">
            <option value="0">JHIDE</option>
            <option value="1">JSHOW</option>
        </field>
        <field
            name="link_author"
            type="radio"
            label="JGLOBAL_LINK_AUTHOR_LABEL"
            description="JGLOBAL_LINK_AUTHOR_DESC"
            default="0">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field
            name="show_create_date"
            type="radio"
            label="JGLOBAL_SHOW_CREATE_DATE_LABEL"
            description="JGLOBAL_SHOW_CREATE_DATE_DESC"
            default="1">
            <option value="0">JHIDE</option>
            <option value="1">JSHOW</option>
        </field>
        <field
            name="show_modify_date"
            type="radio"
            label="JGLOBAL_SHOW_MODIFY_DATE_LABEL"
            description="JGLOBAL_SHOW_MODIFY_DATE_DESC"
            default="1">
            <option value="0">JHIDE</option>
            <option value="1">JSHOW</option>
        </field>
        <field
            name="show_print_icon"
            type="radio"
            label="JGLOBAL_SHOW_PRINT_ICON_LABEL"
            description="JGLOBAL_SHOW_PRINT_ICON_DESC"
            default="0">
            <option
                value="0">JHIDE</option>
            <option
                value="1">JSHOW</option>
        </field>
        <field
            name="show_email_icon"
            type="radio"
            label="JGLOBAL_SHOW_EMAIL_ICON_LABEL"
            description="JGLOBAL_SHOW_EMAIL_ICON_DESC"
            default="0">
            <option
                value="0">JHIDE</option>
            <option
                value="1">JSHOW</option>
        </field>
    </fieldset>
    <fieldset
        name="permissions"
        label="JCONFIG_PERMISSIONS_LABEL"
        description="JCONFIG_PERMISSIONS_DESC"
    >
        <field
            name="rules"
            type="rules"
            label="JCONFIG_PERMISSIONS_LABEL"
            class="inputbox"
            validate="rules"
            filter="rules"
            component="com_sphinxdoc"
            section="component"
        />
    </fieldset>
</config>
